<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/noteId_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/title_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        tools:text="My title"/>

    <TextView
        android:id="@+id/description_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_output"
        android:textSize="14dp"
        android:textColor="@color/white"
        tools:text="My description"/>

    <TextView
        android:id="@+id/created_at_date_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_output"
        android:gravity="end"
        android:textSize="12dp"
        android:textColor="@color/white"
        tools:text="My date"/>


</RelativeLayout>